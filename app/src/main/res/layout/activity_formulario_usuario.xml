<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.FormularioAlunoActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/editNomeUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nome"
                android:background="@drawable/edit_text_form_login"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:padding="15dp"/>

            <ImageView
                android:id="@+id/iconNomeUsuario"
                android:layout_width="155px"
                android:layout_height="match_parent"
                android:background="@drawable/icon"
                android:padding="11dp"
                android:src="@drawable/ic_user"
                tools:ignore="InvalidId" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/editEmailUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Email"
                android:background="@drawable/edit_text_form_login"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:padding="15dp"/>

            <ImageView
                android:id="@+id/iconEmailUsuario"
                android:layout_width="155px"
                android:layout_height="match_parent"
                android:background="@drawable/icon"
                android:padding="15dp"
                android:src="@drawable/ic_email"
                tools:ignore="InvalidId" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/editSenhaUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Senha"
                android:background="@drawable/edit_text_form_login"
                android:inputType="textPassword"
                android:maxLength="30"
                android:padding="15dp"/>

            <ImageView
                android:id="@+id/iconSenhaUsuario"
                android:layout_width="155px"
                android:layout_height="match_parent"
                android:background="@drawable/icon"
                android:padding="15dp"
                android:src="@drawable/olho_fechado"
                tools:ignore="InvalidId" />

        </LinearLayout>


        <Button
            android:id="@+id/btnCadastrarUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Cadastrar"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/button"
            tools:ignore="InvalidId" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>